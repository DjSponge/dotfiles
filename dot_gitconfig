[user]
	email = davidjunqueira9@gmail.com
	name = DjSponge
[alias]
    # Shorten common commands
    st = status
    co = checkout
    br = branch
    cm = commit -m
    
    # The "Oops" command: Undo the last commit but keep your work staged
    unstage = reset HEAD --
    last = log -1 HEAD
    
    # The "Amender": Add staged changes to the last commit without changing the message
    amend = commit --amend --no-edit

    # The "Safer Force Push": Only pushes if you won't overwrite someone else's work
    please = push --force-with-lease

    # A beautiful, compact log view
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
